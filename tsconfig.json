{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "core/*", "cli/*"]
    },
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "core/**/*",
    "cli/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}